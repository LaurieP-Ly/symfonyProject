{% extends 'base.html.twig' %}

{% block title %}Se connecter {% endblock %}
{% block body %}


<header class="secondary">
<div>

<h1> Sport Escape </h1>

<ul> 

<li> <a href="{{ path('home')}}"> Accueil </a> </li>
<li> <a href="{{ path('AllSports')}}"> Voir les sports </a> </li>
<li> <a href="{{ path('panier_index')}}">Votre panier</a> </li>
{% if not app.user %}
<li> <a href="{{ path('security_login')}}">  Se connecter  </a> </li>
 <li><a href="{{ path('security_registration')}}">  Creer un compte </a> </li> 
{% else %}
<li> <a href="{{ path('profil', {'idUser': app.user.id } )}}">Votre profil</a> </li>
<li> <a href="{{ path('security_logout')}}"> Se deconnecter  </a> </li>
{% endif %}
</ul>
 </div>


</header>



<section class="sectionForm">

    <h2 class="titreRegistrationLogin"> Se connecter </h2>

    <form action="{{ path('security_login') }}" method="post">
    <div class="divForm">
        <label for="" class="labelFormLogin"> Adresse email </label>
        <input placeholder=" Adresse email " type="text" required name="_username">
    
    </div>

    <div class="divForm">
        <label for="" class="labelFormLogin"> Mot de passe  </label>
        <input  placeholder=" Mot de passe "  type="password" required name="_password">
    
    </div>

        <button type="submit" class="registrationLoginButton" >Se connecter </button>
    </form>
    <div>
        <p>Pas encore de compte ?  <a href="{{ path('security_registration')}}" class="RLLink">  Creez un compte !   </a> </p>
    </div>

</section>
  <footer> 
        <p> Ce site est un projet purement personnel d'entrainement au framework Symfony </p>
        <p> This is a fully personnal project made for training the Symfony framework</p>
         <a href="{{ path('admin')}}">  Administration  </a>

    </footer>

{% endblock %}
